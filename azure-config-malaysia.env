# Azure Deployment Configuration for STMS
# Location: Malaysia West (malaysiawest)

# Resource Configuration
AZURE_LOCATION="malaysiawest"
RESOURCE_GROUP_NAME="stms-rg-myw"
APP_SERVICE_PLAN="stms-plan-myw"
WEB_APP_NAME="stms-app-myw"
DATABASE_SERVER_NAME="stms-mysql-myw"
DATABASE_NAME="stms"
CONTAINER_REGISTRY_NAME="stmsacrmyw"

# MySQL Configuration for Malaysia West
DB_SERVER_LOCATION="malaysiaawest"
DB_SKU="Standard_B1ms"  # Burstable, General Purpose
DB_VERSION="8.0"
DB_STORAGE_SIZE="20"  # GB
DB_BACKUP_RETENTION="7"  # days

# App Service Configuration
APP_SERVICE_SKU="B1"  # Basic tier for development/testing
CONTAINER_PORT="8080"

# Environment Variables for Production
APP_ENV="production"
APP_DEBUG="false"
LOG_CHANNEL="stderr"
LOG_LEVEL="info"

# Database Connection (will be set by Azure)
DB_CONNECTION="mysql"
DB_HOST="${DATABASE_SERVER_NAME}.mysql.database.azure.com"
DB_PORT="3306"
DB_DATABASE="${DATABASE_NAME}"

# Cache and Session
CACHE_DRIVER="file"
SESSION_DRIVER="file"
QUEUE_CONNECTION="sync"

# Security
SESSION_DOMAIN=".azurewebsites.net"
SANCTUM_STATEFUL_DOMAINS="*.azurewebsites.net"
